html
    box-sizing border-box

*, *:before, *:after
    box-sizing inherit

html, body
    height 100%

body
    background-color white
    color black
    font-family HelveticaNeue, arial, verdana
    font-weight 400
    font-style normal
    display flex
    flex-direction column
    min-height 100vh

.container
    width 100%
    max-width 1170px
    min-width 320px
    padding 0
    margin-right auto
    margin-left auto
    padding 0 10px

    @media (min-width 1190px)
        padding 0
