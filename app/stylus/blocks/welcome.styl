.welcome
	text-align center
	background-color white
	overflow hidden
	
	&__wrap
		min-height 210px
		margin 0 auto
		position relative
		padding 35px 0 25px
		
		@media (min-width 480px)
			max-width 742px
			
		@media (min-width 768px)
			min-width 742px
			max-width 46.375%
			
		&:before
			content ""
			width 100%
			min-height 100%
			background url(../img/tree-left.png) right bottom no-repeat
			position absolute
			right 100%
			bottom 0
			
		&:after
			content ""
			width 100%
			min-height 100%
			background url(../img/tree-right.png) left bottom no-repeat
			position absolute
			left 100%
			bottom 0
			
	&__title
		section-title()
		
	&__text
		font-family HelveticaNeue-Roman, arial, verdana
		padding 0 10px
		color #222222
		font-size 14px
		margin 0 auto
		text-shadow 0 -1px 1px white, 0 -1px 1px white, 0 1px 1px white, 0 1px 1px white, -1px 0 1px white, 1px 0 1px white, -1px 0 1px white, 1px 0 1px white, -1px -1px 1px white, 1px -1px 1px white, -1px 1px 1px white, 1px 1px 1px white, -1px -1px 1px white, 1px -1px 1px white, -1px 1px 1px white, 1px 1px 1px white
		
		@media (min-width 480px)
			font-size 18px
			line-height 34px
			text-align center
			max-width 742px
			
		@media (min-width 768px)
			min-width 742px
			max-width 46.375%
			padding 0
			
		p
			margin 0
			
		a
			color $green-light-color
			text-decoration none
			
		b
			font-weight 700
			color $green-dark-color