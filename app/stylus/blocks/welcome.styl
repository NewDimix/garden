.welcome
	text-align center
	padding 35px 10px 20px
	background-color white
	@media (min-width 480px)
		padding 35px 0 20px
	@media (min-width 768px)
		background url(../img/tree-left.png) -70% 100% no-repeat, url(../img/tree-right.png) 170% 100% no-repeat
		background-color white
	@media (min-width 880px)
		background-position -45% 100%, 145% 100%
	@media (min-width 992px)
		background-position -30% 100%, 130% 100%
	@media (min-width 1096px)
		background-position -20% 100%, 120% 100%
	@media (min-width 1200px)
		background-position -10% 100%, 110% 100%
	@media (min-width 1350px)
		background-position 0% 100%, 100% 100%
	@media (min-width 1450px)
		background-position 3.2% 100%, 98% 100%
	&__title
		section-title()
	&__text
		font-family 'HelveticaNeue-Roman'
		color #222222
		font-size 14px
		text-align left
		text-shadow 0 -1px 1px white, 0 -1px 1px white, 0 1px 1px white, 0 1px 1px white, -1px 0 1px white, 1px 0 1px white, -1px 0 1px white, 1px 0 1px white, -1px -1px 1px white, 1px -1px 1px white, -1px 1px 1px white, 1px 1px 1px white, -1px -1px 1px white, 1px -1px 1px white, -1px 1px 1px white, 1px 1px 1px white
		@media (min-width 480px)
			font-size 18px
			line-height 34px
			text-align center
			max-width 650px
			margin 0 auto
		@media (min-width 1450px)
			max-width 50%
		p
			margin 0
		a
			color $green-light-color
			text-decoration none
		b
			font-weight 700
			color $green-dark-color