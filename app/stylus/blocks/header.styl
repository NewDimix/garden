.header
	&__top-line
		max-width 1170px
		margin 0 auto
		
		@media (min-width 480px)
			margin 0 -20px
			
		@media (min-width 768px)
			margin 0 auto
			
	&__menu-wrap
		max-width 1170px
		margin 0 auto
		position relative
		
		@media (min-width 480px)
			margin 0 -20px
			
		@media (min-width 768px)
			margin 0 auto
			
	&__column
		@media (min-width 768px)
			display inline-block
			
		&_1
			@media (min-width 768px)
				width 245px
				
			@media (min-width 992px)
				width 285px
				
		&_2
			@media (min-width 768px)
				float right
				
	&__logo
		text-align center
		margin 15px 0
		
		@media (min-width 768px)
			margin 30px 0
			
		@media (min-width 992px)
			margin 15px 0
			
		img
			vertical-align top
			
			@media (min-width 768px)
				width 100%
				height auto
				
	&__owl
		display none
		
		@media (min-width 768px)
			display block
			text-align right