.header
	margin-bottom 15px
	
	@media (min-width 480px)
		margin-bottom 0
			
	&__menu-wrap
		position relative
			
	&__column
		@media (min-width 768px)
			display inline-block
			
		&_1
			@media (min-width 768px)
				width 245px
				
			@media (min-width 992px)
				width 285px
				
		&_2
			@media (min-width 768px)
				float right
				margin-bottom 0
				
	&__logo
		text-align center
		padding 15px 0
		
		@media (min-width 768px)
			padding 30px 0
			
		@media (min-width 992px)
			padding 15px 0
			
		img
			vertical-align top
			
			@media (min-width 768px)
				width 100%
				height auto
				
	&__owl
		display none
		
		@media (min-width 768px)
			display block
			text-align right