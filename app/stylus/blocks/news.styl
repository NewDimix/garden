.news
	text-align center
	padding 30px 0 25px
	background-image repeating-linear-gradient(to bottom, rgb(228, 228, 228) 0%, transparent 5px, transparent 100%)
	
	@media (min-width 480px)
		padding 35px 0 46px
		
	&__title
		section-title()
		margin-bottom 30px
		
	&__item
		display inline-block
		position relative
		height 251px
		overflow hidden
		outline none
		
		&:hover
			.news__desc
				bottom 0
				
	&__desc
		position absolute
		bottom -100%
		height 165px
		width 100%
		background-color rgba(188, 189, 38, 0.8)
		transition all .5s linear
		padding 45px 10px 0
		
		&:after
			content ""
			border-left 30px solid transparent
			border-right 30px solid transparent
			border-bottom 30px solid rgba(188, 189, 38, 0.8)
			position absolute
			right 50%
			transform translateX(50%)
			top -30px
			
	&__text
		font-weight 300
		color #ffffff
		font-size 15px
		margin 0
		margin-bottom 15px
		letter-spacing 0.01em
		ellipsis()
		
		&:last-child
			margin-bottom 0
		
		&_bold
			font-weight 500
			margin-bottom 10px
			
		&_link
			display block
			font-weight 500
			text-decoration none
			
		p
			margin 0
			
	&__items-wrap
		margin-bottom 29px
			
	&__button
		position relative
		display inline-block
		height 43px
		line-height 43px
		border 1px solid $green-light-color
		font-weight 900
		color $green-dark-color
		font-size 13px
		text-decoration none
		text-transform uppercase
		padding 0 5px 0 103px
		transition all .5s ease
		overflow hidden
		letter-spacing 0.01em
		
		@media (min-width 480px)
			padding 0 20px 0 118px
			max-width 80%
			
		&:hover
			color white
			background-color $green-light-color
			
		&:before
			content ""
			position absolute
			left 0
			top -1px
			background-color $green-light-color
			sprite-ramification()
			
	.slick-next.slick-arrow
		right 0

	.slick-prev.slick-arrow
		left 0
		z-index 1