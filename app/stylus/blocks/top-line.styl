.top-line
    font-family HelveticaNeue-Roman, arial, verdana
    font-size 0
    border-bottom 1px solid #e4e4e4

    @media (min-width 480px)
        text-align right

    &__subscribe
        display block
        font-size 11px
        text-align center
        padding 5px 0
        vertical-align middle
        text-decoration none
        color $green-dark-color
        border-bottom 1px solid #e4e4e4

        @media (min-width 480px)
            border-bottom none
            display inline-block
            margin-right 19px
            text-align right

    &__search
        padding 10px 0 10px 29px
        position relative
        text-align center

        @media (min-width 480px)
            display inline-block
            width 285px
            text-align right
            border-left 1px solid #e4e4e4
            padding-right 14px

        &:before
            content ""
            position absolute
            left 40px
            bottom 0
            vertical-align middle
            opacity 0
            transition all 1.5s linear
            sprite-cochlea()

        &.move
            &:before
                opacity 1
                left 14px

    &__input
        font-size 11px
        width 40%
        min-width 148px
        border 3px solid #e4e4e4
        line-height 16px
        padding-left 5px
        padding-right 5px
        outline none
        vertical-align middle

    &__btn
        border none
        outline none
        vertical-align middle
        margin-left 5px
        sprite-search()

        &:hover
            cursor pointer

        &:active
            transform scale(.9)
